@model ShuaBets.WebUI.Models.Account.LoginViewModel


    @using (Html.BeginForm("Login", "Account")) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="kode-comment-form contact-form">
            <form method="post" id="commentform" class="comment-form">
                <div class="kode-left-comment-sec">

                    <div class="col-md-6">


                        @Html.Bootstrap().TextBoxFor(m => m.PhoneNumber).Placeholder().PrependIcon("fa fa-phone").ShowValidationMessage(true).Class("default-input").Label()


                    </div>

                    <div class="col-md-6" style="margin-bottom:30px;">

                        @Html.Bootstrap().PasswordFor(m => m.Password).Placeholder().PrependIcon("fa fa-key").HtmlAttributes(new { autocomplete = "off" }).ShowValidationMessage(true).Class("default-input").Label()


                    </div>


                    <div class="form-submit">
                        <div class="col-md-6 ">
                            <button class="default-button submit btn-1 theme-background" type="submit">Login</button>
                            @*<input name="submit" type="submit" class="submit btn-1 theme-background" value="Login">*@
                        </div>

                    </div>

                    <div class="col-sm-4">
                        @Html.Bootstrap().ActionLink("Forgot your password?", "ForgotPassword").AppendIcon("glyphicon glyphicon-help")
                    </div>


                </div>

            </form>
        </div>

    }
  
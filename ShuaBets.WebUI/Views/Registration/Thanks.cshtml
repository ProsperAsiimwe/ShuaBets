                                    <span class="rgb-label1">MONTHLY TIPS</span>
                                    <img src="~/Content/coreAssets/images/ads/2.png" alt="">
                                </figure>
                                <!--Featured Contant start-->
                                <div class="rgb-featured-contant">
                                    <!--Featured Title start-->
                                    <h6 class="featured-title"><a href="">3,000 (@strCurrency)</a></h6>
                                    <!--Featured Title End-->

                                </div>
                                <!--Featured Contant End-->
                            </div>
                            <!--Featured News Small End-->
                        </div>

                        <div class="col-md-4 col-sm-6">
                            <!--Featured News Small Start-->
                            <div class="rgb-featured-news rgb-featured-news-small">
                                <figure class="rgb-overlay">
                                    <span class="rgb-label1">YEARLY TIPS</span>
                                    <img src="~/Content/coreAssets/images/ads/3.png" alt="">
                                </figure>
                                <!--Featured Contant start-->
                                <div class="rgb-featured-contant">
